<!-- GAMEPLAY SCREEN -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/screen_gameplay"
        android:gravity="center"
        android:padding="10dp"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/timer_field"
        android:layout_weight="0.05" />

    <TextView android:layout_width="334dp"
            android:text="@string/what_score_do_you_deserve"
            android:layout_marginBottom="40dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_weight="0.70"
            android:id="@+id/question_desc" />

    <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

        <Button
            android:layout_height="wrap_content"
            android:textSize="20sp"
                android:padding="5dp"
                android:id="@+id/option_button_1"
            android:layout_width="350dp" />
    </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <Button
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:padding="5dp"
                android:id="@+id/option_button_2"
                android:layout_width="350dp" />
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <Button
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:padding="5dp"
                android:id="@+id/option_button_3"
                android:layout_width="350dp" />
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <Button
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:padding="5dp"
                android:id="@+id/option_button_4"
                android:layout_width="350dp" />

        </LinearLayout>

        <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/confirm"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:id="@+id/ok_score_button"
            android:layout_marginTop="40dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.12" />

    <TextView
        android:text="Score: None"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/score_text"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_weight="0.06" />
</LinearLayout>

